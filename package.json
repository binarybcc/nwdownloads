{
  "name": "nwdownloads-dashboard",
  "version": "2.0.0",
  "description": "Newspaper circulation dashboard with Tailwind CSS",
  "scripts": {
    "build:css": "tailwindcss -i ./web/assets/input.css -o ./web/assets/output.css --minify",
    "watch:css": "tailwindcss -i ./web/assets/input.css -o ./web/assets/output.css --watch",
    "build": "npm run build:css",
    "prepare": "husky",
    "lint": "eslint web/assets/**/*.js",
    "lint:fix": "eslint web/assets/**/*.js --fix",
    "format": "prettier --write web/assets/**/*.js"
  },
  "lint-staged": {
    "web/assets/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tailwindcss": "^3.4.0"
  }
}
